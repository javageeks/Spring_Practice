<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id = "address" class ="com.greenhorn.spring.model.Address">
		<property name="city" value="Bangalore"></property>
		<property name="state" value="Karnataka"></property>
	</bean>
	
	<bean id ="employee" class="com.greenhorn.spring.model.Employee">
		<constructor-arg name="name" value="Elbin"></constructor-arg>
		<constructor-arg ref="address">
		</constructor-arg>
	</bean>
	
	<bean id ="employeeService" class="com.greenhorn.spring.service.EmployeeService">
		 <property name="employee" ref="employee"></property>
	</bean>
</beans>